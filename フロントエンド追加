<!DOCTYPE html>
<html lang="ja">
<head>
  <meta charset="UTF-8">
  <title>GitHub SQLite表示</title>
</head>
<body>
  <button onclick="loadDB()">DB表示</button>
  <div id="result"></div>

  <script>
    function loadDB() {
      fetch('https://your-render-app.onrender.com/get_db')  // ← Render の URL に変更
        .then(res => res.json())
        .then(data => {
          document.getElementById('result').innerHTML =
            '<pre>' + JSON.stringify(data, null, 2) + '</pre>';
        });
    }
  </script>
</body>
</html>
